        <p id="answer"></p>

<script>
function myFunction() {
    var question = document.getElementById("question").value;
    var username = document.getElementById("username").value;
    var password = document.getElementById("password").value;
    alert("thinking");
    if (username != "sheshank") {
        document.getElementById("answer").innerHTML = "Hey! You are not authorized to log in to this website.";
        return;
    }
    if (password.startsWith("cool")) {
        document.getElementById("answer").innerHTML = password.substr(4);
    } else {
        document.getElementById("answer").innerHTML = "Hey! You are not authorized to log in to this website.";
        return;
    }
}
</script>
    
